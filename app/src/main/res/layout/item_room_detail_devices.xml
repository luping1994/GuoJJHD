<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:background="@drawable/item_selector"
    android:layout_height="@dimen/item_room_detail_size">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/item_room_detail_img_size"
        android:layout_height="@dimen/item_room_detail_img_size"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        />

    <net.suntrans.smhome.widgets.SingleLineZoomTextView
        android:layout_marginTop="8dp"
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_centerInParent="true"
        android:text="客厅"
        android:textColor="@color/white"
        android:textSize="@dimen/item_room_detail_textsize" />
</RelativeLayout>