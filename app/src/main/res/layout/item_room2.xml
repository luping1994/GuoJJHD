<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_selector">

    <ImageView
        android:id="@+id/image"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_room"
        tools:layout_editor_absoluteX="716dp"
        tools:layout_editor_absoluteY="1123dp" />

    <net.suntrans.smhome.widgets.SingleLineZoomTextView
        android:id="@+id/name"
        android:layout_width="@dimen/item_room_text_size"
        android:layout_height="@dimen/item_room_txt_width"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/room_name_bg"
        android:gravity="center"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/item_room_textsize" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.07" />
</android.support.constraint.ConstraintLayout>