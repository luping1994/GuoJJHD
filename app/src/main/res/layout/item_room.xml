<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/item_room_width"
    android:layout_height="match_parent"
    android:background="@drawable/item_selector">


    <RelativeLayout
        android:layout_width="@dimen/item_room_img_width"
        android:layout_height="@dimen/item_room_img_width"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_room" />

        <net.suntrans.guojjhd.widgets.SingleLineZoomTextView
            android:layout_centerInParent="true"
            android:id="@+id/name"
            android:layout_width="@dimen/item_room_text_size"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/room_name_bg"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/item_room_textsize" />
    </RelativeLayout>


</RelativeLayout>